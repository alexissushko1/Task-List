@host = http://localhost:3000

### Register new user

POST {{host}}/register
Content-Type: application/json

{
  "username": "a@h.com",
  "password": "123"
}

### Login
# @name login
POST {{host}}/login
Content-Type: application/json

{
  "username": "a@h.com",
  "password": "123"
}

### Get all tasks
@token = {{login.response.body.token}}
GET {{host}}/tasks
Authorization: Bearer {{token}}


### Post a task
@token = {{login.response.body.token}}
POST {{host}}/tasks
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "name": "Task Name",
  "done": false,
  "ownerId": 1
}


### Update the specific task
PUT {{host}}/tasks/4
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "name": "Task Name",
  "done": true
}

### Delete a task with a specific id

@token = {{login.response.body.token}}
DELETE {{host}}/tasks/4
Authorization: Bearer {{token}}
